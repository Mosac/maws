{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "sourceMap": false,
        "rootDir": "./",
        "outDir": "./dist/"
    },
    "include": [
        "./**/*.ts",
        "!node_modules/**/*.ts"
    ],
    "exclude" : [
        "node_modules",
        "spec"
    ]
}
